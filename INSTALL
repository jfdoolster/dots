#!/bin/bash

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

cp $SCRIPT_DIR/.bash_profile $HOME
cp $SCRIPT_DIR/.bash_aliases $HOME
cp $SCRIPT_DIR/.bash_logout $HOME

cp -r $SCRIPT_DIR/.vim $HOME
if [[ "$OSTYPE" == "msys"* ]]; then
    cp -r $SCRIPT_DIR/.vim $HOME/vimfiles
fi

exec $(source ~/.bashrc)
